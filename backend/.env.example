# Server Configuration
PORT=3001
NODE_ENV=development

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quizarena
DB_USER=postgres
DB_PASSWORD=your_password_here

# CORS
CORS_ORIGIN=http://localhost:3000

# Game Settings
GAME_CODE_LENGTH=6
MAX_PLAYERS_PER_GAME=100
QUESTION_TIMEOUT=30000
GAME_CLEANUP_INTERVAL=3600000

# Security Settings
# Auto-block IP after N violations (default: 10)
AUTO_BLOCK_THRESHOLD=10

# Socket.IO Security
# Maximum simultaneous connections per IP (default: 10)
MAX_SOCKET_CONNECTIONS_PER_IP=10

# Socket inactivity timeout in milliseconds (default: 300000 = 5 minutes)
SOCKET_INACTIVITY_TIMEOUT=300000

# Rate Limiting
# Enable/disable rate limiting (default: true)
ENABLE_RATE_LIMITING=true

# Suspicious Activity Logging
# Enable detailed logging of suspicious requests (default: true)
LOG_SUSPICIOUS_ACTIVITY=true
